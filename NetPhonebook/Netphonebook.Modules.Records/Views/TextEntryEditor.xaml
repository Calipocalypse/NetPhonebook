<UserControl x:Class="Netphonebook.Modules.Records.Views.TextEntryEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Netphonebook.Modules.Records.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Yellow">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Text="First text"/>
                <TextBox Text="{Binding FirstText}" Margin="5" MinWidth="50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Text="Second text"/>
                <TextBox Text="{Binding SecondText}" Margin="5" MinWidth="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
